{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "Node16",
    "outDir": "dist-tmp"
  }
}
